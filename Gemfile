source 'http://rubygems.org'

gem 'rails', '3.1.0'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

group :development do
    gem 'sqlite3'
    gem 'rspec-rails', '2.6.1'
end

group :production do
    gem 'pg'
    gem 'rspec-rails', '2.6.1'
end

#gem 'sqlite3', :group => :development
#gem 'pg', :group => :production


